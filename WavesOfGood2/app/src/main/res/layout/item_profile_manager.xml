<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/item_help_style">
    <ImageView
        android:id="@+id/moderImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher_background"
        android:background="@drawable/image_item_help"/>
    <TextView
        android:id="@+id/nameModer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/moderImage"
        android:layout_marginStart="10dp"
        android:text="Мария Балконская"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/moderImage"
        android:layout_below="@+id/nameModer"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textSize="12sp"
        android:text="balokonskaya@mail.ru"/>

</RelativeLayout>