<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#434343"
            android:fontFamily="sans-serif"
            android:text="Регистрация"
            />
        <EditText
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Название организации"
            android:background="@drawable/edit_text_background"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:padding="15dp"
            android:textSize="18sp"
            android:textCursorDrawable="@null"
            android:textColor="#000"
            android:layout_marginTop="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"/>
        <EditText
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:hint="Email"
            android:background="@drawable/edit_text_background"
            android:padding="15dp"
            android:textSize="18sp"
            android:textCursorDrawable="@null"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пол"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:textStyle="bold"/>
            <Button

                android:id="@+id/maleBtn"
                android:layout_toRightOf="@+id/txt1"
                android:background="@drawable/button_nofilling_background"
                android:text="мужчина"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="20dp"
                />
            <Button

                android:id="@+id/femaleBtn"
                android:layout_toRightOf="@+id/maleBtn"
                android:background="@drawable/button_nofilling_background"
                android:text="женщина"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                />
        </RelativeLayout>
        <Button

            android:id="@+id/regBtn"
            android:background="@drawable/button_background_vk"
            android:text="Войти через Вконтакте"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            />
        <Button
            android:background="@drawable/button_background"
            android:text="Зарегестрироваться"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Шаг 2 из 2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#434343"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>