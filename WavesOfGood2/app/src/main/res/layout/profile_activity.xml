<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/group"
                android:background="#fff"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person_black_24dp"/>

            <ImageButton
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="80dp"
                android:layout_toStartOf="@+id/group"
                android:background="#fff"
                android:src="@drawable/ic_notifications_grey_toolbar_24dp" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/profileTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Профиль"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#343434"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"/>
        <RelativeLayout
            android:id="@+id/profileBox"
            android:layout_below="@+id/profileTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/companyNameTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/profileImage"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:text="Благо дари"
                android:textSize="22dp"
                />
            <TextView
                android:id="@+id/companyEmailTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/companyNameTxtView"
                android:layout_toEndOf="@+id/profileImage"
                android:layout_marginTop="8dp"
                android:layout_marginStart="30dp"
                android:text="blago@dari.ru"
                android:textSize="17sp"
                />
            <Button
                android:id="@+id/editBtn"
                android:background="@drawable/button_nofilling_background"
                android:layout_width="180dp"
                android:layout_height="28dp"
                android:layout_toEndOf="@+id/profileImage"
                android:layout_alignBottom="@+id/profileImage"
                android:layout_marginStart="30dp"
                android:text="Редактирование"
                android:textSize="13sp"
                android:textColor="#8cebbe"/>
            <Button
                android:id="@+id/addProfileImage"
                android:background="@drawable/button_backgrount_light"
                android:layout_width="150dp"
                android:layout_height="28dp"
                android:layout_below="@+id/profileImage"
                android:layout_alignStart="@+id/profileImage"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Добавить фото"
                android:textSize="13sp"
                android:textColor="#fff"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/moders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileBox"
            android:text="Модераторы"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#343434"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvModers"
            android:layout_below="@+id/moders"
            android:layout_above="@+id/addModers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/addModers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_background"
            android:text="Добавить модератора"
            android:textColor="#fff" />
    </RelativeLayout>

</LinearLayout>