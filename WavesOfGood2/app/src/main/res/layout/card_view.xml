<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#FFFFFF"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardViewEvent"
        android:background="#FFF"
        >
        <LinearLayout
            android:background="@drawable/card_design"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:padding="10dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/cardViewImage"
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:background="@drawable/menu" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Закончилось"
                        android:gravity="end"
                        android:textColor="#f45042"/>
                    <TextView
                        android:id="@+id/cardViewNameEvent"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Солдатская каша в честь 9 мая"
                        android:textColor="#000"/>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Тип события"
                            android:textColor="#7B7B7B"
                            android:textSize="12sp"/>
                         <TextView
                             android:id="@+id/cardViewTypeEvent"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Питание"
                             android:textSize="12sp"
                             android:layout_alignParentRight="true"
                             android:textColor="#000"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Количество людей"
                            android:textColor="#7B7B7B"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/cardViewNumberPersons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textSize="12sp"
                            android:layout_alignParentRight="true"
                            android:textColor="#000"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Адрес"
                            android:textColor="#7B7B7B"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/cardViewAdress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ул.Достоевского, д.132, кв. 32"
                            android:textSize="10sp"
                            android:layout_alignParentRight="true"
                            android:textColor="#000"/>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                     android:background="@drawable/button_style_card"
                    android:text="Редактировать"
                    android:layout_marginRight="5dp"
                    android:textAllCaps="false"
                    android:textColor="#000"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_style_card"
                    android:text="Начать"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:layout_marginRight="5dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_style_card"
                    android:text="Удалить"
                    android:textAllCaps="false"
                    android:textColor="#000"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>